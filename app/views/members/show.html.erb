<div class="container">
  <div class="row mb-4">
    <h1><strong>My page</strong></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="card col-12 mb-4">
        <h5 class="mt-4"><u>Icon</u></h5>
          <%= image_tag @member.image.url, class:"guest-icon mx-auto" %>
      <div class="card-body">
        <h2 class="card-title">
        <h5 class="card-subtitle mb-4 mt-4"><u>Nickname</u><br></h5>
          <p><%= @member.name %></p>
        <h5 class="card-subtitle mb-4 mt-4"><u>Profile</u><br></h5>
          <p><%= @member.profile %></p>
        <hr class="devise-link my-5">
        <% if current_member == @member %>
          <%= link_to "Edit", edit_member_registration_path, class: 'btn btn-info btn-block mb-4' %>
        <% else %>
          <%= link_to "トップページに戻る", root_path, class:'btn btn-info btn-block mb-4' %>
        <% end %>
      </div>
    </div>
  </div>


  <%# タブ %>
  <div class="row">
    <ul class="nav nav-tabs col-12 col-lg-12">
      <li class="nav-item col-lg-6 text-center">
        <a href="#memberpost" class="nav-link active text-info" data-toggle="tab">Post　<%= @member.posts.count %></a>
      </li>
      <li class="nav-item col-lg-6 text-center">
        <a href="#memberfav" class="nav-link text-info" data-toggle="tab">Favorite　<%= @member.favorites.count %></a>
      </li>
    </ul>
  </div>

    <%# タブの中身（1）  %>
  <div class="row">
    <div class="tab-content mt-4 col-lg-6 mx-auto">
      <div id="memberpost" class="tab-pane active">
        <% @posts.each do |post| %>
          <div class="card-deck mb-4">
            <div class="card">
              <img class="card-img-top">
              <%= image_tag post.image.url %>
              <div class="card-body">
                <h5 class="text-muted">
                  <%= post.schedule.mon %>/
                </h5>
                <h1 class="card-title">
                  <mark><%= post.schedule.day %></mark>
                </h1>

                <h4 class="card-subtitle mt-1 text-center mb-2">
                  <%= link_to artist_path(post.artist) do %>
                    [<%= post.artist.name %>]<br>
                  <% end %>
                </h4>
                <h4 class="card-subtitle  text-center mb-4">
                  <%= post.title %>
                </h4>

                <p class="card-text">
                  <div class="h5"><u>DAY</u></div>
                  <%= post.schedule.year %>/<%= post.schedule.mon %>/<%= post.schedule.day %>　<%= post.schedule.hour %>:<%= post.schedule.min %>〜
                </p>
                <p></p>

                <p class="card-text mb-2">
                  <div class="h5"><u>VIEWING</u></div>
                    <% if post.watching_method == 0 %>
                      ストリーミング
                    <% elsif post.watching_method == 1 %>
                      ライブ
                    <% end %>
                  <p></p>
                </p>

                <p class="card-text mb-2">
                  <div class="h5"><u>ADMISSION</u></div>
                    <%= post.admission %>
                </p>
                <p></p>

                <%= link_to post_path(post) do %>
                  <p class="btn btn-primary mt-2">
                    More...
                  </p>
                <% end %>

                <% if post.favorited_by?(current_member) %>
                  <%= link_to fav_posts_path(post), class:"fav", remote: true do %>
                    <div class="text-right">
                      <i class="fa fa-heart " id="<%= post.id %>"></i>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to fav_posts_path(post), class: "fav", remote: true do %>
                    <div class="text-right">
                      <i class="fa fa-heart-o" id="<%= post.id %>"></i>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%# タブの中身（2）  %>
      <div id="memberfav" class="tab-pane">
        <% @member.favorite_posts.each do |post| %>
          <div class="card-deck mb-4">
            <div class="card mx-auto">
              <img class="card-img-top">
                <%= image_tag post.image.url %>
              <div class="card-body">
                <h5 class="text-muted">
                  <%= post.schedule.mon %>/
                </h5>
                <h1 class="card-title">
                  <mark><%= post.schedule.day %></mark>
                </h1>

                <h3 class="card-subtitle mt-1 text-center mb-2">
                  <%= link_to artist_path(post.artist) do %>
                    [<%= post.artist.name %>]<br>
                  <% end %>
                </h3>
                <h2 class="card-subtitle  text-center mb-4">
                  <%= post.title %>
                </h2>

                <p class="card-text">
                  <div class="h5"><u>DAY</u></div>
                  <%= post.schedule.year %>/<%= post.schedule.mon %>/<%= post.schedule.day %>　<%= post.schedule.hour %>:<%= post.schedule.min %>〜
                </p>
                <p></p>

                <p class="card-text mb-2">
                  <div class="h5"><u>VIEWING</u></div>
                    <% if post.watching_method == 0 %>
                      ストリーミング
                    <% elsif post.watching_method == 1 %>
                      ライブ
                    <% end %>
                  <p></p>
                </p>

                <p class="card-text mb-2">
                  <div class="h5"><u>ADMISSION</u></div>
                    <%= post.admission %>
                </p>
                <p></p>

                <%= link_to post_path(post) do %>
                  <p class="btn btn-primary mt-2">
                    More...
                  </p>
                <% end %>

                <% if post.favorited_by?(current_member) %>
                  <%= link_to fav_posts_path(post), class:"fav", remote: true do %>
                    <div class="text-right">
                      <i class="fa fa-heart " id="<%= post.id %>"></i>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to fav_posts_path(post), class: "fav", remote: true do %>
                    <div class="text-right">
                      <i class="fa fa-heart-o" id="<%= post.id %>"></i>
                    </div>
                  <% end %>
                <% end %>

                <div class="text-right" >
                  <%= link_to member_path(post.member_id) do %>
                    <%= image_tag post.member.image.url, class:"member-icon" %>
                    <span class="text-dark">
                      <%= post.member.name %>
                    </span>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
