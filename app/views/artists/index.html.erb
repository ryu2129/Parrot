<div class="container-title">
  <h1><strong><u>Artist</u></strong></h1>
</div>

<div class="container-search mt-4">
  <%= text_field_tag :keyword,"", class: "search_input", placeholder: "Artist Name" %>
  <%= submit_tag "Search", class: "search_btn" %>
</div>

<div class="contents">
  <div class="container-artist">
      <% @artists.each do |artist| %>
        <div class="card-deck artist-card">
          <div class="card">
          <img class="card-img-top  ">
            <%= link_to artist_path(artist) do %>
              <%= image_tag artist.image.thumb.url, class:"img" %>
              <h4 class="card-title text-center mb-4">
                <%= artist.name %>
              </h4>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>