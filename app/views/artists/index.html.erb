<div class="container">
  <div class="row">
    <div class="col-12">
      <%= text_field_tag :keyword,"", class: "search_input", placeholder: "Artist Name" %>
      <%= submit_tag "Search", class: "search_btn" %>
    </div>
  </div>
</div>

<div class="contents">
  <div class="container">
    <div class="row">
      <% @artists.each do |artist| %>
        <div class="card-deck col-12 col-lg-4 mb-4 mt-4 text-center">
          <div class="card">
          <img class="card-img-top  ">
            <%= link_to artist_path(artist) do %>
              <%= image_tag artist.image.thumb.url, class:"img" %>
              <h4 class="card-title text-center mb-4">
                <%= artist.name %>
              </h4>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>