<div class="container">
  <div class="row">
    <div class="col-12">
      <%#= form_with(url: search_artists_path, remote: true, method: :get, class: "search_form") do |f| %>
        <%= text_field_tag :keyword,"", class: "search_input", placeholder: "Artist Name" %>
        <%= submit_tag "Search", class: "search_btn" %>
      <% #end %>

      <div class="contents">
      <% @artists.each do |artist| %>
        <div class="card-deck col-6">
        <%= link_to artist_path(artist) do %>
          <div class="card">
            <img class="card-img-top">
            <%= image_tag artist.image.url, class:"img" %>
            <h4 class="card-title text-center mb-4">
              <%= artist.name %>
            </h4>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>