<div class="container">
  <div class="row">
    <% @artists.each do |artist| %>
      <div class="card-deck col-6">
      <%= link_to artist_path(artist) do %>
        <div class="card">
          <img class="card-img-top">
          <%= image_tag artist.image.url, class:"img" %>
          <h4 class="card-title text-center mb-4">
            <%= artist.name %>
          </h4>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>