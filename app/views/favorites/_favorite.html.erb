<% if member_signed_in? %>
    <% if current_member.already_favorited?(post) %>
        <%= link_to "/posts/#{@post.id}/favorites/#{@post.favorites.ids}", method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= post.favorites.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to "/posts/#{@post.id}/favorites", method: :post, method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
                <%= post.favorites.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= post.favorites.count %>
    </i>
<% end %>